@model BasketWebPanel.Areas.Dashboard.Models.DocumentModels



<table class="table table-striped table-hover table-bordered" id="DataTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title / Name</th>

            @if (Model.Role == Utility.RoleTypes.SuperAdmin)
            {
                <th>Document Owner</th>
            }
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var doc in Model.Documents)
        {
            <tr>
                <td>@doc.Id</td>
                <td>@doc.Title</td>
                @if (Model.Role == Utility.RoleTypes.SuperAdmin)
                {
                    <td>@doc.User.Email</td>
                }
                <td class="text-center">
                    <button class="btn btn-outline-success" id="@doc.Id" onclick="RedirectToDocument(this.id)"><i class="bi bi-ui-checks-grid"></i></button>
                    <button class="btn btn-outline-primary" id="EditDocument" onclick="EditDocument(this)" data-docid="@doc.Id" data-title="@doc.Title"><i class="bi bi-pencil-square"></i></button>
                    <button class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
